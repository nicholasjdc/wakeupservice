[Unit]
Description=Form Service FastAPI
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/opt/form-service/backend
EnvironmentFile=/opt/form-service/backend/.env
ExecStart=/opt/form-service/backend/venv/bin/uvicorn main:app --host 127.0.0.1 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
